<body class="text-center">
    <h1>Hi User</h1>
    <main class="container justify-content-center">

        <button class="btn btn-lg btn-block mt-3 mb-3 button" id="searchbyfilter" type="submit" name="btn-login">search
            by filter</button>
         <button class="btn btn-lg btn-block mt-3 mb-3 button" id="showall" type="submit" name="btn-login">show all
            places
        </button>
        {{> checkboxes}}
        <button class="btn btn-lg btn-block mt-3 mb-3 button" id="apply" type="submit" name="btn-login">apply
            filter</button>
        <button class="btn btn-lg btn-block mt-3 mb-3 button" id="reset" type="submit" name="btn-login">reset
            filter</button>
       
        <div id="places" class="row"></div>
    </main>

     <script src="/jquery-3.5.1.min.js"></script>
