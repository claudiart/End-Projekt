    <style>
        .button {
            background-color: #882c66;
            color: #e4b370;
        }

        h1 {
            color: #882c66;
        }
        .text-center {
            color: #46082f;
        }
        .form-label {
            color: #e4b370;
        }
        fieldset {    
            text-align:center;
            margin:50px auto;
            width:70%;
            border:1px solid  #882c66;
            padding:10px 10px 10px 10px;
            border-top: 1px solid  #882c66;
            border-bottom: 2px solid  #882c66;
